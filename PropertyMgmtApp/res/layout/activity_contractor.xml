<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#788cb3"
    tools:context=".Contractor" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tvSearchCon" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true" >

                <TableRow
                    android:id="@+id/tableRow1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/tvConName"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:text="Contractor Name" />

                    <TextView
                        android:id="@+id/tvConMobile"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:text="Contractor Mobile" />
                </TableRow>
                
   			 <TextView
   			     android:id="@+id/tvwSQLcon"
   			     android:layout_width="wrap_content"
   			     android:layout_height="314dp"
   			     android:layout_alignLeft="@+id/scrollView1"
   			     android:layout_below="@+id/scrollView1"
   			     android:text="Contractor goes here" />

            </TableLayout>

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btnAddCon"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignLeft="@+id/scrollView1"
        android:layout_alignParentTop="true"
        android:background="@drawable/addtenants_launcher" />

    <Button
        android:id="@+id/btnSearchCon"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/searchtenant_launcher" />

    <TextView
        android:id="@+id/tvSearchCon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/btnSearchTenants"
        android:text="Search All"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/tvAddCon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/btnAddCon"
        android:text="Add new"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>
