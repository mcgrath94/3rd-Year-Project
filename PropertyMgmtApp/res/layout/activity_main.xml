<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#788cb3"
    tools:context=".MainActivity" >

    <Button
        android:id="@+id/btnMyProperties"
        android:layout_width="110dp"
        android:layout_height="80dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="25dp"

        android:background="@drawable/properties_launcher" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/btnMyProperties"
        android:layout_below="@+id/btnMyProperties"
        android:text="@string/btn_MyProperties"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/btnTenants"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignBottom="@+id/btnMyProperties"
        android:layout_alignLeft="@+id/btnAbout"
        android:background="@drawable/tenants_launcher" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView3"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignRight="@+id/btnTenants"
        android:text="@string/btn_Tenants"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/btnHelp"
        android:layout_below="@+id/btnHelp"
        android:layout_marginRight="16dp"
        android:text="Help"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/btnAbout"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="30dp"
        android:background="@drawable/usefulsites_launcher" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView5"
        android:layout_below="@+id/btnExit"
        android:layout_marginLeft="14dp"
        android:text="Exit"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/btnHelp"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignLeft="@+id/btnSmsTenant1"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="14dp"
        android:background="@drawable/help_launcher" />

    <Button
        android:id="@+id/btnSmsTenant1"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignBaseline="@+id/btnAbout"
        android:layout_alignBottom="@+id/btnAbout"
        android:layout_alignLeft="@+id/btnMyProperties"
        android:layout_marginLeft="16dp"
        android:background="@drawable/smstenant_launcher" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView2"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignRight="@+id/textView3"
        android:text="SMS Tenant"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/btnAbout"
        android:layout_marginRight="31dp"
        android:text="  Useful Sites"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/btnExit"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_above="@+id/textView1"
        android:layout_alignRight="@+id/textView2"
        android:background="@drawable/exit_launcher" />

</RelativeLayout>
